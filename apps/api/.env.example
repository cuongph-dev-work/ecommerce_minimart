## Application
NODE_ENV=development
PORT=8000
API_PREFIX=api

## Database (Docker/Postgres)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ecommerce_minimart

## JWT
JWT_SECRET=change-me-in-production
